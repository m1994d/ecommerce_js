<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../partials/header') %>
    <main class="py-5 login">
      <div class="card shadow my-5" style="min-width: 300px;">
        <form class="card-body" action="/login" method="POST">
          <h2 class="mt-3 h2 text-center">Ingresar</h2>
          <div class="md-form">
            <input type="text" id="email" name="email" class="form-control"
              value="<%= locals.olds && olds.email ? olds.email : '' %>">
            <label for="firstName" class="">Email</label>
            <% if (locals.errors && errors.email) { %>
              <span>
                <%= errors.email.msg %>
              </span>
              <% } %>
          </div>
          <div class="md-form">
            <input type="password" name="password" id="password" class="form-control">
            <label for="password">Contraseña</label>
            <% if (locals.errors && errors.password) { %>
              <span>
                <%= errors.password.msg %>
              </span>
              <% } %>
          </div>
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" name="rememberMe" id="remember-me">
            <label class="custom-control-label" for="remember-me">Recuerdame (por 30 días)</label>
          </div>
          <hr class="mb-4">
          <button class="btn btn-primary btn-lg btn-block waves-effect waves-light" type="submit">Ingresar</button>
        </form>
      </div>
    </main>
    <%- include('../partials/footer') %>
      <%- include('../partials/scripts') %>
</body>

</html>